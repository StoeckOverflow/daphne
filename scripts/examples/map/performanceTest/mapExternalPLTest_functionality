 // Overflow test
choosen_function = "def overflowTest(x): return x * 4294967295";  // Replace the constant with the maximum value for the type
map(X, choosen_function, "x", "Python_Ctypes");

// Underflow test
choosen_function = "def underflowTest(x): return x * -2147483648";  // Replace the constant with the minimum value of the type
map(X, choosen_function, "x", "Python_Ctypes");

// Precision test
choosen_function = "def floatPrecision(x): return x + 1e-9";
map(X, choosen_function, "x", "Python_Ctypes");